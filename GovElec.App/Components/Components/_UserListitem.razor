
<div class="row">
    <div class="col-3">
        <p>@User!.UserName</p>
    </div>
    <div class="col-4">
        <p>@User?.FullName</p>
    </div>
    <div class="col-2">
        <p>@User?.Equipe</p>
    </div>
    <div class="col-1">
        @if (User?.IsDeleted == true)
        {
            <i class="bi bi-toggle-off"></i>
        }
        else
        {
            <i class="bi bi-toggle-on"></i>
        }
    </div>
    <div class="col-2">
        <a href="@($"user/{User?.Id}")" class="btn btn-primary mt-2">
            <i class="bi bi-eye"></i> View
        </a>
    </div>
        

</div>

@code {
    [Parameter]
    public UserForListResponse? User { get; set; }=new();



}
